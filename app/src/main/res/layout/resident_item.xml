<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/resident_item_order"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="#"/>

    <TextView
            android:id="@+id/resident_item_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="张三"/>

    <TextView
            android:id="@+id/resident_item_sex"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="男"/>

    <TextView
            android:id="@+id/resident_item_building"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="6"/>

    <TextView
            android:id="@+id/resident_item_entrance"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="2"/>

    <TextView
            android:id="@+id/resident_item_room"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="301"/>

    <TextView
            android:id="@+id/resident_item_phone"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="123456790"/>

</LinearLayout>